<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
	<contextName>PT-LOG</contextName>
	<property name="LOG_HOME" value="/Users/yexl/logs" />
	<!-- 输出到控制台 -->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}[%c][%L][%p]-%msg%n</pattern>
		</encoder>
	</appender>

	<!-- 普通输出源输出到文件 -->
	<appender name="framework"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}[%c][%thread][%p]-%msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/spring-master/framework-%d{yyyy-MM-dd'.log'}</fileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
	</appender>


	<!-- 自定义日志 -->
	<logger name="My.Log" level="info" additivity="false">
		<appender-ref ref="framework" />
	</logger>
	<logger name="com.xl" level="info" additivity="false">
		<appender-ref ref="framework" />
	</logger>
	
	<logger name="org.mybatis" level="debug" />
	<logger name="org.apache.ibatis" level="info" />
	<logger name="org.hibernate" level="info" />
    <logger name="org.apache.activemq" level="error"/> 
    
	<root level="info">
		<appender-ref ref="console" />
	</root>
</configuration>